<div class="page-header">
  <h1>Listing Capabilities <small><%= link_to '(New Capability)', new_capability_path %></small></h1>
</div>

    <% @capabilities.each do |capability| %>
      <ul class="list-group">
      <li class="list-group-item">
          <span class="pull-right">
          <%= link_to capability, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
          </span>
          <span class="pull-right">
          <%= link_to edit_capability_path(capability) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          </span>
          <%= capability.name %>
        </li>
      </ul>
    <% end %>

<br>
