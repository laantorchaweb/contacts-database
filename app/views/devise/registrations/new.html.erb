<div class="col-sm-6 col-md-4 col-md-offset-4">
    <h1 class="text-center login-title">Sign up</h1>
    <div class="account-wall">

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-signin"}) do |f| %>

        <%= f.email_field :email, :autofocus => true, class: "form-control" %>
        <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i> <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

        <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>

        <a href="#" class="need-help">Need help? </a><span class="clearfix"></span>

        <% end %>
    </div>
    <div class="text-center new-account">
      <%= render "devise/shared/links" %>
    </div>
</div>
